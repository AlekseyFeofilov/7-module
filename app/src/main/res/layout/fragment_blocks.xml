<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/blocksContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/upBlocksBorder"
        app:layout_constraintEnd_toEndOf="@id/rightBlocksBorder"
        app:layout_constraintStart_toStartOf="@id/leftBlocksBorder"
        app:layout_constraintBottom_toBottomOf="@id/downBlocksBorder"
        android:translationZ="10dp">
        <View
            android:id="@+id/panel"
            android:background="@drawable/panel"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </View>
        <Button
            android:id="@+id/closeButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:background="@drawable/close_panel_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="51dp"
            android:scrollbars="none">
            <include layout="@layout/list_of_blocks"/>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/blocksButton"

        android:layout_height="60dp"
        android:layout_width="0dp"
        android:layout_marginBottom="1dp"
        android:layout_marginEnd="1dp"

        app:layout_constraintDimensionRatio="1:1"
        android:background="@drawable/blocks_button"

        app:layout_constraintBottom_toBottomOf="@id/downBlocksBorder"
        app:layout_constraintEnd_toEndOf="@id/rightBlocksBorder"/>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/upBlocksBorder"

        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="horizontal"
        app:layout_constraintGuide_begin="16dp" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/leftBlocksBorder"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/downBlocksBorder"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.98"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/rightBlocksBorder"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95"/>

</merge>