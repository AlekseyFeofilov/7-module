<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/blocksFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BlocksFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#30000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <View
            android:id="@+id/panel"
            android:background="@drawable/panel"

            android:layout_width="0dp"
            android:layout_height="0dp"

            app:layout_constraintTop_toTopOf="@id/upBlocksBorder"
            app:layout_constraintEnd_toEndOf="@id/rightBlocksBorder"
            app:layout_constraintBottom_toBottomOf="@id/downBlocksBorder"
            app:layout_constraintStart_toStartOf="@id/leftBlocksBorder" >
        </View>
        <Button
            android:id="@+id/closeButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:background="@drawable/close_panel_button"
            app:layout_constraintTop_toTopOf="@id/panel"
            app:layout_constraintEnd_toEndOf="@id/panel"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="50dp"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="@id/panel"
            app:layout_constraintEnd_toEndOf="@id/panel"
            app:layout_constraintBottom_toBottomOf="@id/panel"
            app:layout_constraintStart_toStartOf="@id/panel">
            <View
                android:layout_margin="8dp"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:background="@drawable/cell_for_blocks"/>
            <View
                android:layout_margin="8dp"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:background="@drawable/cell_for_blocks"/>
            <View
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:background="@drawable/cell_for_blocks"/>
        </androidx.appcompat.widget.LinearLayoutCompat>



        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/upBlocksBorder"

            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="horizontal"
            app:layout_constraintGuide_begin="16dp" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/leftBlocksBorder"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/downBlocksBorder"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.95"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/rightBlocksBorder"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>