<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- border -->
    <item>
        <shape android:shape="oval">
            <size android:height="@dimen/buttonsSize" android:width="@dimen/buttonsSize"/>
            <solid android:color="@color/border"/>
        </shape>
    </item>

    <!-- circle when is clicked -->
    <item android:state_pressed="true"
        android:top="1dp"
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp">
        <shape android:shape="oval">
            <gradient
                android:angle="45.0"
                android:startColor="@color/blocksButtonCircleEdgeDown"
                android:centerColor="@color/homeFragmentButtonsEndDown"
                android:endColor="@color/blocksButtonCircleEdgeDown"/>
        </shape>
    </item>

    <!-- circle -->
    <item
        android:top="1dp"
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp">
        <shape android:shape="oval">
            <gradient
                android:angle="45.0"
                android:startColor="@color/blocksButtonCircleEdgeUp"
                android:centerColor="@color/homeFragmentButtonsEndUp"
                android:endColor="@color/blocksButtonCircleEdgeUp" />
        </shape>
    </item>

    <!-- plus -->
    <item
        android:top="26dp"
        android:bottom="26dp"
        android:left="8dp"
        android:right="8dp"
        android:gravity="center">
        <shape android:shape="rectangle">
            <corners android:radius="5dp"/>
            <solid android:color="@color/blocksButtonPlus"/>
        </shape>
    </item>
    <item
        android:top="8dp"
        android:bottom="8dp"
        android:left="26dp"
        android:right="26dp"
        android:gravity="center">
        <shape android:shape="rectangle">
            <corners android:radius="5dp"/>
            <solid android:color="@color/blocksButtonPlus"/>
        </shape>
    </item>


</layer-list>