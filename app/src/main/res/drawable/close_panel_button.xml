<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- border -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#111111"/>
            <size
                android:height="31dp"
                android:width="31dp"/>
        </shape>
    </item>
    <!-- body -->
    <item
        android:top="1dp"
        android:bottom="1dp"
        android:right="1dp"
        android:left="1dp">
        <shape android:shape="oval">
            <solid android:color="@color/closeButton"/>
            <size
                android:height="30dp"
                android:width="30dp"/>
        </shape>
    </item>
    <!-- cross -->
    <item
        android:top="13dp"
        android:bottom="13dp"
        android:right="5dp"
        android:left="5dp">
        <rotate
            android:fromDegrees="45"
            android:toDegrees="0">
            <shape android:shape="rectangle">
                <solid android:color="#111111"/>
                <corners android:radius="5dp"/>
            </shape>
        </rotate>
    </item>
    <item
        android:top="5dp"
        android:bottom="5dp"
        android:right="13dp"
        android:left="13dp">
        <rotate
            android:fromDegrees="45"
            android:toDegrees="0">
            <shape android:shape="rectangle">
                <solid android:color="#111111"/>
                <corners android:radius="5dp"/>
            </shape>
        </rotate>
    </item>
</layer-list>