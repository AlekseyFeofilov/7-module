<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- border -->
    <item>
        <shape android:shape="oval">
            <size android:height="@dimen/buttonsSize" android:width="@dimen/buttonsSize"/>
            <solid android:color="@color/border"/>
        </shape>
    </item>

    <!-- circle when is clicked -->
    <item android:state_pressed="true"
        android:top="1dp"
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp">
        <shape android:shape="oval">
            <gradient
                android:angle="45.0"
                android:startColor="@color/blocksButtonCircleEdgeDown"
                android:centerColor="@color/homeFragmentButtonsEndDown"
                android:endColor="@color/blocksButtonCircleEdgeDown"/>
        </shape>
    </item>

    <!-- circle -->
    <item
        android:top="1dp"
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp">
        <shape android:shape="oval">
            <gradient
                android:angle="45.0"
                android:startColor="@color/blocksButtonCircleEdgeUp"
                android:centerColor="@color/homeFragmentButtonsEndUp"
                android:endColor="@color/blocksButtonCircleEdgeUp" />
        </shape>
    </item>

    <item android:right="40dp"
        android:top="11dp"
        android:bottom="11dp"
        android:left="15dp">
        <shape android:shape="rectangle">
            <solid android:color="#111111"/>
            <corners android:radius="5dp"/>
        </shape>
    </item>
    <item android:right="25dp"
        android:top="20dp"
        android:bottom="3dp"
        android:left="30dp">
        <rotate android:fromDegrees="60">
            <shape android:shape="rectangle">
                <solid android:color="#111111"/>
                <corners android:radius="5dp"/>
            </shape>
        </rotate>
    </item>
    <item android:right="25dp"
        android:top="3dp"
        android:bottom="20dp"
        android:left="30dp">
        <rotate android:fromDegrees="-60">
            <shape android:shape="rectangle">
                <solid android:color="#111111"/>
                <corners android:radius="5dp"/>
            </shape>
        </rotate>
    </item>
</layer-list>